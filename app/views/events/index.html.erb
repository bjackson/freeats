<h1>Listing events</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Date time</th>
    <th>Description</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= event.date_time.to_s(:event_time) %></td>
    <td><%= event.food %></td>
    <td><%= event.location %></td>
    <td><%= link_to 'Show', event %></td>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @events %>
<%= link_to 'New Event', new_event_path %>
<%= link_to 'Map', 'events/map_page' %>

<%= gmaps4rails(@json) %>
